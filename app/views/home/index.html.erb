<div id="contents">
  <div class="container">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-4">
          <div class="my-2">
            <%= link_to post_path post.id do %>
              <%= attachment_image_tag post, :image, format: 'jpeg' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: "layouts/create_modal" %>